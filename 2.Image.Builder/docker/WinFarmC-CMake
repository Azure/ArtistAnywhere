FROM mcr.microsoft.com/windows:10.0.19042.985-amd64

WORKDIR C:\\Users\\Public\\Downloads

RUN curl -o chocolatey.ps1 -L https://community.chocolatey.org/install.ps1 &&\
    PowerShell -ExecutionPolicy Unrestricted -File chocolatey.ps1 &&\
    C:\\ProgramData\\chocolatey\\choco install git --confirm &&\
    C:\\ProgramData\\chocolatey\\choco install cmake --confirm &&\
    C:\\ProgramData\\chocolatey\\choco install visualstudio2022buildtools --confirm

ENV PATH=$PATH;"C:\\Program Files\\Git\\bin";"C:\\Program Files\\CMake\\bin";"C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools\\MSBuild\\Current\\Bin\\amd64"
